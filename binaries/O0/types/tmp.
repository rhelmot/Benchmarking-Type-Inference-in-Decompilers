def longest_common_prefix_length(arr):
    if not arr or not len(arr):
        return 0

    min_len = min(len(s) for s in arr)
    lcp_length = 0

    for i in range(min_len):
        current_char = arr[0][i]
        if all(s[i] == current_char for s in arr):
            lcp_length += 1
        else:
            break

    return lcp_length